<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PracticaDSMGen.Infraestructure"
		                   namespace="PracticaDSMGen.Infraestructure.EN.PracticaDSM">
		    
		    
			
				<class name="ReseñaNH" table="Reseña"> 
				  	
						<id name="Id" column="idReseña" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Nota" type="integer"> 
						<column name="nota"  not-null="true"/>
					</property>
					<property name="Fecha" type="date"> 
						<column name="fecha"  not-null="true"/>
					</property>
			
			
			
		  			
						<many-to-one name="Usuario" class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.UsuarioNH" >	
								<column name="FK_email_idUsuario"/> 
						</many-to-one>
											 					
			
		  			
						<many-to-one name="Producto" class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.ProductoNH" >	
								<column name="FK_idProducto_idProducto"/> 
						</many-to-one>
											 					
			
			
			
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="ReseñaNHReadAllHQL">from ReseñaNH</query>
		  <query name="ReseñaNHdameReseñaPorProductoHQL"><![CDATA[select res FROM ReseñaNH as res join res.Producto as pro where pro.id = :p_idProducto]]></query>
		</hibernate-mapping>
	