<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PracticaDSMGen.Infraestructure"
		                   namespace="PracticaDSMGen.Infraestructure.EN.PracticaDSM">
		    
		    
			
				<class name="ProductoNH" table="Producto"> 
				  	
						<id name="Id" column="idProducto" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Precio" type="big_decimal"> 
						<column name="precio"  not-null="true"/>
					</property>
					<property name="Stock" type="integer"> 
						<column name="stock"  not-null="true"/>
					</property>
					<property name="Formato" > 
						<column name="formato"  not-null="true"/>
					</property>
					<property name="Estilo" > 
						<column name="estilo"  not-null="true"/>
					</property>
					<property name="Fotos" type="string"> 
						<column name="fotos"  not-null="true"/>
					</property>
					<property name="Artista" type="string"> 
						<column name="artista"  not-null="true"/>
					</property>
			
			
			
		  			
						<bag name="Reseña" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.ReseñaNH"/>
					    </bag>
					
			
		  			
						<bag name="Estanteria" table="[estanteria_producto]" inverse="true" >
							<key>
								
									<column name="FK_idProducto_idProducto"/> 
							</key>
      						<many-to-many class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.EstanteriaNH">
									<column name="FK_idEstanteria_idEstanteria"/> 
      						</many-to-many>
    					</bag>
			
		  			
						<bag name="LineaPedido" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.LineaPedidoNH"/>
					    </bag>
					
			
			
			
			
			
			
			
					
					
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="ProductoNHReadAllHQL">from ProductoNH</query>
		</hibernate-mapping>
	