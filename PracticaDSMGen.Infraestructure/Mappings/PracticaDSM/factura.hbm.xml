<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PracticaDSMGen.Infraestructure"
		                   namespace="PracticaDSMGen.Infraestructure.EN.PracticaDSM">
		    
		    
			
				<class name="FacturaNH" table="Factura"> 
				  	
						<id name="Id" column="idFactura" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Numero" type="string"> 
						<column name="numero"  not-null="true"/>
					</property>
					<property name="ImporteTotal" type="big_decimal"> 
						<column name="importeTotal"  not-null="true"/>
					</property>
					<property name="Fecha" type="date"> 
						<column name="fecha"  not-null="true"/>
					</property>
			
			
			
		  			
					
							   <one-to-one name="Pedido" class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.PedidoNH" property-ref="Factura" />							
					 
						
			
			
			
					
					
					
					
					
		
		 </class>	
		  
		  <query name="FacturaNHReadAllHQL">from FacturaNH</query>
		</hibernate-mapping>
	