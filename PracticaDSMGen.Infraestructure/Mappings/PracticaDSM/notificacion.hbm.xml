<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PracticaDSMGen.Infraestructure"
		                   namespace="PracticaDSMGen.Infraestructure.EN.PracticaDSM">
		    
		    
			
				<class name="NotificacionNH" table="Notificacion"> 
				  	
						<id name="Id" column="idNotificacion" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Tipo" > 
						<column name="tipo"  not-null="true"/>
					</property>
					<property name="Fecha" type="date"> 
						<column name="fecha"  not-null="true"/>
					</property>
					<property name="Titulo" type="string"> 
						<column name="titulo"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Fotos" type="string"> 
						<column name="fotos"  not-null="true"/>
					</property>
			
			
			
		  			
						<many-to-one name="Usuario" class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.UsuarioNH" >	
								<column name="FK_email_idUsuario"/> 
						</many-to-one>
											 					
			
			
			
			
			
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="NotificacionNHReadAllHQL">from NotificacionNH</query>
		</hibernate-mapping>
	