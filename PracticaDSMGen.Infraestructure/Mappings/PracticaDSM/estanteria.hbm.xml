<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PracticaDSMGen.Infraestructure"
		                   namespace="PracticaDSMGen.Infraestructure.EN.PracticaDSM">
		    
		    
			
				<class name="EstanteriaNH" table="Estanteria"> 
				  	
						<id name="Id" column="idEstanteria" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Valoracion" type="string"> 
						<column name="valoracion"  not-null="true"/>
					</property>
					<property name="Visitas" type="integer"> 
						<column name="visitas"  not-null="true"/>
					</property>
					<property name="Visible" type="boolean"> 
						<column name="visible"  not-null="true"/>
					</property>
			
			
			
		  			
						<many-to-one name="Usuario" class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.UsuarioNH" >	
								<column name="FK_email_idUsuario"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="Producto" table="[estanteria_producto]"  >
							<key>
								
									<column name="FK_idEstanteria_idEstanteria"/> 
							</key>
      						<many-to-many class="PracticaDSMGen.Infraestructure.EN.PracticaDSM.ProductoNH">
									<column name="FK_idProducto_idProducto"/> 
      						</many-to-many>
    					</bag>
			
			
			
			
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="EstanteriaNHReadAllHQL">from EstanteriaNH</query>
		  <query name="EstanteriaNHdameEstanteriaPorProductoHQL"><![CDATA[select es FROM EstanteriaNH as es join es.Producto as pro where pro.id = :p_idProducto]]></query>
		</hibernate-mapping>
	