@model DSM.Models.ResenaViewModel

@{
    ViewData["Title"] = "Crear reseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section form-page">
    <div class="form-card">
        <div class="form-header">
            <h2>ESCRIBIR RESEÑA</h2>
            <p>Cuéntanos qué te ha parecido el producto.</p>
        </div>

        <form asp-action="Create" method="post" class="form-layout">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="ProductoId" />
            <input type="hidden" asp-for="UsuarioEmail" />

            <div class="form-field">
                <label asp-for="Nota"></label>
                <input asp-for="Nota" class="form-input" type="number" min="0" max="10" />
                <span asp-validation-for="Nota" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Fecha"></label>
                <input asp-for="Fecha" class="form-input" type="date" />
                <span asp-validation-for="Fecha" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Descripcion"></label>
                <textarea asp-for="Descripcion" class="form-textarea" rows="6"></textarea>
                <span asp-validation-for="Descripcion" class="form-error"></span>
            </div>

            <div class="form-actions">
                <button class="btn primary-btn" type="submit">Publicar</button>
                <a class="btn ghost-btn" asp-action="Producto" asp-route-productoId="@Model.ProductoId">Cancelar</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
