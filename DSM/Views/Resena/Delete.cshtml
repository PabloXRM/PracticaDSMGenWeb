@model DSM.Models.ResenaViewModel

@{
    ViewData["Title"] = "Eliminar reseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section form-page">
    <div class="detail-card">
        <div class="form-header">
            <h2>ELIMINAR RESEÑA</h2>
            <p>Esta acción no se puede deshacer.</p>
        </div>

        <div class="detail-list">
            <div class="detail-row">
                <div class="detail-label">Producto</div>
                <div class="detail-value">ID: @Model.ProductoId</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Usuario</div>
                <div class="detail-value">@Model.UsuarioEmail</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Nota</div>
                <div class="detail-value">@Model.Nota / 10</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Fecha</div>
                <div class="detail-value">@Model.Fecha.ToString("yyyy-MM-dd")</div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="form-actions" style="margin-top:18px;">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button class="btn danger-btn" type="submit">Eliminar</button>
            <a class="btn ghost-btn" asp-action="Index">Cancelar</a>
        </form>
    </div>
</section>
