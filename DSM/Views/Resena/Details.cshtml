@model DSM.Models.ResenaViewModel
@{
    ViewData["Title"] = "Detalle reseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle Reseña</h1>

<div>
    <h4>Reseña</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Producto</dt>
        <dd class="col-sm-10">@Model.ProductoId</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.UsuarioEmail</dd>

        <dt class="col-sm-2">Nota</dt>
        <dd class="col-sm-10">@Model.Nota</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</p>
