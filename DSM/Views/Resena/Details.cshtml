@model DSM.Models.ResenaViewModel

@{
    ViewData["Title"] = "Detalle reseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-header section-header-row">
        <div>
            <div class="section-kicker">Reseña</div>
            <h2>DETALLE</h2>
        </div>
    </div>

    <div class="detail-card">
        <div class="detail-list">
            <div class="detail-row">
                <div class="detail-label">Producto</div>
                <div class="detail-value">ID: @Model.ProductoId</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Usuario</div>
                <div class="detail-value">@Model.UsuarioEmail</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Nota</div>
                <div class="detail-value">@Model.Nota / 10</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Fecha</div>
                <div class="detail-value">@Model.Fecha.ToString("yyyy-MM-dd")</div>
            </div>

            <div class="detail-row" style="align-items:flex-start;">
                <div class="detail-label">Descripción</div>
                <div class="detail-value" style="text-align:left; font-weight:500; max-width:420px;">
                    @Model.Descripcion
                </div>
            </div>
        </div>

        <div class="form-actions" style="margin-top:16px;">
            <a class="btn ghost-btn" asp-action="Producto" asp-route-productoId="@Model.ProductoId">Volver</a>
        </div>
    </div>
</section>
