@model IEnumerable<DSM.Models.ResenaViewModel>
@{
    ViewData["Title"] = "Reseñas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reseñas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nueva reseña</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Producto</th>
            <th>Usuario</th>
            <th>Nota</th>
            <th>Fecha</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductoId</td>
                <td>@item.UsuarioEmail</td>
                <td>@item.Nota</td>
                <td>@item.Fecha.ToString("yyyy-MM-dd")</td>
                <td>@(item.Descripcion?.Length > 100 ? item.Descripcion.Substring(0, 100) + "..." : item.Descripcion)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('¿Seguro que desea eliminar esta reseña?');">Eliminar</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="7">No hay reseñas</td></tr>
    }
    </tbody>
</table>
