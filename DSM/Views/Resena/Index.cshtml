@model IEnumerable<DSM.Models.ResenaViewModel>

@{
    ViewData["Title"] = "Reseñas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-header section-header-row">
        <div>
            <div class="section-kicker">Admin</div>
            <h2>RESEÑAS</h2>
        </div>

        <a class="btn ghost-btn" asp-controller="Resena" asp-action="Index">Actualizar</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="detail-card">
            <p>No hay reseñas.</p>
        </div>
    }
    else
    {
        <div class="invoice-grid">
            @foreach (var r in Model.OrderByDescending(x => x.Fecha))
            {
                <article class="invoice-card">
                    <div class="invoice-header">
                        <div class="invoice-id">
                            <div class="invoice-label">Producto</div>
                            <div class="invoice-number">ID: @r.ProductoId</div>
                            <div class="invoice-date">@r.UsuarioEmail</div>
                        </div>

                        <div class="invoice-total">
                            <div class="invoice-label">Nota</div>
                            <div class="invoice-total-amount">@r.Nota / 10</div>
                        </div>
                    </div>

                    <div class="invoice-body">
                        <div class="invoice-total">
                            <div class="invoice-label">Fecha</div>
                            <div>@r.Fecha.ToString("yyyy-MM-dd")</div>
                        </div>
                    </div>

                    <div style="color:var(--color-muted); font-size:.9rem; line-height:1.45;">
                        @(string.IsNullOrWhiteSpace(r.Descripcion)
                                        ? "(Sin descripción)"
                                        : (r.Descripcion.Length > 160 ? r.Descripcion.Substring(0, 160) + "..." : r.Descripcion))
                    </div>

                    <div class="invoice-actions">
                        <a class="btn ghost-btn btn-sm" asp-action="Details" asp-route-id="@r.Id">Detalles</a>
                        <a class="btn ghost-btn btn-sm" asp-action="Edit" asp-route-id="@r.Id">Editar</a>
                        <a class="btn ghost-btn btn-sm invoice-delete"
                           asp-action="Delete" asp-route-id="@r.Id"
                           onclick="return confirm('¿Seguro que desea eliminar esta reseña?');">Eliminar</a>
                    </div>
                </article>
            }
        </div>
    }
</section>
