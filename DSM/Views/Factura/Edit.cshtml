@model DSM.Models.FacturaViewModel

@{
    ViewData["Title"] = "Editar Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-page">
    <div class="form-card">
        <h1 class="form-title">Editar Factura</h1>
        <p class="form-subtitle">Modifica los detalles de la factura.</p>

        <form asp-action="Edit" method="post" class="form-layout">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="form-error"></div>

            <div class="form-field">
                <label asp-for="Numero"></label>
                <input asp-for="Numero" class="form-input" />
                <span asp-validation-for="Numero" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="ImporteTotal"></label>
                <input asp-for="ImporteTotal" class="form-input" />
                <span asp-validation-for="ImporteTotal" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Fecha"></label>
                <input asp-for="Fecha" class="form-input" />
                <span asp-validation-for="Fecha" class="form-error"></span>
            </div>

            <div class="form-actions">
                <button class="btn primary-btn" type="submit">Guardar</button>
                <a class="btn ghost-btn" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
