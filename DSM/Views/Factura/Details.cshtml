@model DSM.Models.FacturaViewModel

@{
    ViewData["Title"] = "Detalles de la Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-header section-header-row">
        <div>
            <div class="section-kicker">Factura</div>
            <h2>DETALLES</h2>
        </div>
    </div>

    <div class="detail-card">
        <div class="detail-list">
            <div class="detail-row">
                <div class="detail-label">Número de Factura</div>
                <div class="detail-value">@Model.Numero</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Importe Total</div>
                <div class="detail-value">@String.Format("{0:0.00} €", Model.ImporteTotal)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Fecha</div>
                <div class="detail-value">@Model.Fecha?.ToString("yyyy-MM-dd")</div>
            </div>

        </div>

        <div class="form-actions" style="margin-top:16px;">
            <a class="btn ghost-btn" asp-action="Index">Volver a la lista</a>
        </div>
    </div>
</section>
