@model DSM.Models.MetodoPagoViewModel
@using PracticaDSMGen.ApplicationCore.Enumerated.PracticaDSM

@{
    ViewData["Title"] = "Crear Método de Pago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section form-page">
    <div class="form-card">
        <div class="form-header">
            <span class="section-kicker">Administración</span>
            <h2>Nuevo Método de Pago</h2>
            <p>Añade un nuevo método de pago disponible para los clientes.</p>
        </div>

        <form asp-action="Create" method="post" class="form-layout">
            <div asp-validation-summary="ModelOnly" class="form-validation-summary"></div>

            <div class="form-field">
                <label asp-for="TipoPago" class="control-label">Tipo de Pago</label>
                <select asp-for="TipoPago" class="form-select" required>
                    <option value="">-- Selecciona un tipo de pago --</option>
                    @foreach (TipoPagoEnum tipo in Enum.GetValues(typeof(TipoPagoEnum)))
                    {
                        <option value="@tipo">@tipo</option>
                    }
                </select>
                <span asp-validation-for="TipoPago" class="form-error"></span>
            </div>

            <div class="form-checkbox-row">
                <input type="checkbox" asp-for="Valido" id="validoCheckbox" checked />
                <label for="validoCheckbox" class="control-label">Habilitar para clientes</label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn primary-btn">Crear Método de Pago</button>
                <a asp-action="Index" class="btn ghost-btn">Cancelar</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
