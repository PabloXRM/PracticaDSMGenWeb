@model DSM.Models.MetodoPagoViewModel

@{
    ViewData["Title"] = "Editar Método de pago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-page">
    <div class="form-card">
        <h1 class="form-title">Editar Método de pago</h1>
        <p class="form-subtitle">Modifica los detalles del método de pago.</p>

        <form asp-action="Edit" method="post" class="form-layout">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="form-error"></div>

            <div class="form-field">
                <label asp-for="TipoPago"></label>
                <input asp-for="TipoPago" class="form-input" />
                <span asp-validation-for="TipoPago" class="form-error"></span>
            </div>

            <div class="form-field">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Valido" />
                    @Html.DisplayNameFor(model => model.Valido)
                </label>
                <span asp-validation-for="Valido" class="form-error"></span>
            </div>

            <div class="form-actions">
                <button class="btn primary-btn" type="submit">Guardar</button>
                <a class="btn ghost-btn" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
