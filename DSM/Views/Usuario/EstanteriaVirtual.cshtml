@model List<DSM.Models.EstanteriaVirtualViewModel>
@{
    ViewData["Title"] = "Mi Estantería Virtual";
}

<div class="profile-page">
    <div class="profile-card">

        <div class="profile-header">
            <div>
                <h1 class="profile-title">Mi Estantería Virtual</h1>
                <p class="profile-subtitle">Visualiza y organiza tus discos y vinilos favoritos.</p>
            </div>
            <div class="profile-badges">
                <span class="profile-badge primary">@Model.Count Estantería(s)</span>
            </div>
        </div>

        <div class="profile-divider"></div>

        @if (Model == null || Model.Count == 0)
        {
            <div style="text-align: center; padding: 40px 20px;">
                <p style="color: var(--color-muted); font-size: 1rem; margin-bottom: 20px;">
                    No tienes estanterías creadas aún. ¡Crea tu primera estantería para organizar tus discos favoritos!
                </p>
                <a class="btn primary-btn" href="@Url.Action("Create", "Estanteria")">+ Crear Estantería</a>
            </div>
        }
        else
        {
            <div style="margin-bottom: 20px;">
                <a class="btn primary-btn" href="@Url.Action("Create", "Estanteria")">+ Crear Nueva Estantería</a>
            </div>

            @foreach (var estanteria in Model)
            {
                <div class="estanteria-section" style="margin-bottom: 30px; padding-bottom: 30px; border-bottom: 1px solid rgba(0,0,0,0.1);">
                    <!-- Cabecera de Estantería -->
                    <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px;">
                        <div>
                            <h3 style="margin: 0 0 6px 0; font-size: 1.3rem; font-weight: 700;">@estanteria.Descripcion</h3>
                        </div>
                        <div style="text-align: right;">
                            @if (estanteria.Visible)
                            {
                                <span style="display: inline-block; padding: 4px 12px; border-radius: 999px; background: rgba(0,150,0,0.1); color: #0f7a0f; font-size: 0.75rem; text-transform: uppercase; font-weight: 700; margin-bottom: 8px;">Visible</span>
                            }
                            else
                            {
                                <span style="display: inline-block; padding: 4px 12px; border-radius: 999px; background: rgba(179,0,0,0.08); color: #a30000; font-size: 0.75rem; text-transform: uppercase; font-weight: 700; margin-bottom: 8px;">Privada</span>
                            }
                            <div style="font-size: 0.85rem; color: var(--color-muted);">
                                <div>? Valoración: @estanteria.Valoracion</div>
                                <div>??? Visitas: @estanteria.Visitas</div>
                            </div>
                        </div>
                    </div>

                    <!-- Grid de Productos -->
                    <div class="estanteria-products-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(180px, 1fr)); gap: 14px; margin-bottom: 16px;">
                        @if (estanteria.Productos == null || estanteria.Productos.Count == 0)
                        {
                            <div style="grid-column: 1 / -1; padding: 30px 20px; text-align: center; background: rgba(0,0,0,0.03); border-radius: 12px; color: var(--color-muted);">
                                <p style="margin: 0 0 12px 0;">Esta estantería no tiene productos aún.</p>
                                <a class="btn primary-btn" href="@Url.Action("Edit", "Estanteria", new { id = estanteria.Id })" style="font-size: 0.85rem;">Añadir discos</a>
                            </div>
                        }
                        else
                        {
                            @foreach (var producto in estanteria.Productos)
                            {
                                <div class="estanteria-product-card" style="background: var(--color-card); border-radius: 14px; overflow: hidden; box-shadow: var(--shadow-soft); transition: transform 0.12s ease, box-shadow 0.12s ease;">
                                    <!-- Imagen -->
                                    <div style="height: 160px; background: #faf7f4; display: flex; align-items: center; justify-content: center; padding: 8px;">
                                        @{
                                            string imagenPath = Url.Content("~/img/cd1.png");
                                            if (!string.IsNullOrEmpty(producto.Fotos))
                                            {
                                                if (!producto.Fotos.StartsWith("http") && !producto.Fotos.StartsWith("/"))
                                                {
                                                    imagenPath = Url.Content("~/img/" + producto.Fotos);
                                                }
                                                else
                                                {
                                                    imagenPath = producto.Fotos;
                                                }
                                            }
                                        }
                                        <img src="@imagenPath" alt="@producto.Descripcion" style="width: 100%; height: 100%; object-fit: contain;" />
                                    </div>

                                    <!-- Info -->
                                    <div style="padding: 10px;">
                                        <h4 style="margin: 0 0 4px 0; font-size: 0.9rem; font-weight: 700; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@producto.Descripcion</h4>
                                        <p style="margin: 0 0 6px 0; font-size: 0.8rem; color: var(--color-muted); white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@producto.Artista</p>
                                        <div style="font-size: 0.85rem; font-weight: 700; color: var(--color-primary);">@producto.Precio.ToString("C")</div>
                                    </div>

                                    <!-- Acción -->
                                    <div style="padding: 8px; border-top: 1px solid rgba(0,0,0,0.06);">
                                        <a href="@Url.Action("Producto", "Tienda", new { id = producto.Id })" class="btn primary-btn" style="width: 100%; padding: 6px; font-size: 0.75rem; text-align: center; text-decoration: none;">Ver detalles</a>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <!-- Acciones de Estantería -->
                    <div style="display: flex; gap: 10px;">
                        <a href="@Url.Action("Edit", "Estanteria", new { id = estanteria.Id })" class="btn ghost-btn" style="font-size: 0.85rem;">?? Editar</a>
                        <a href="@Url.Action("Details", "Estanteria", new { id = estanteria.Id })" class="btn ghost-btn" style="font-size: 0.85rem;">??? Ver detalles</a>
                    </div>
                </div>
            }
        }

        <div class="profile-actions" style="margin-top: 20px; border-top: 1px solid rgba(0,0,0,0.1); padding-top: 20px;">
            <a class="btn primary-btn" href="@Url.Action("Perfil", "Usuario")">Volver al perfil</a>
            <a class="btn ghost-btn" href="@Url.Action("Index", "Home")">Ir al home</a>
        </div>

    </div>
</div>

<style>
    .estanteria-product-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 18px 44px rgba(0, 0, 0, 0.1);
    }
</style>
