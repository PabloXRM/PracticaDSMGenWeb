@model DSM.Models.RegisterUsuarioViewModel
@{
    ViewData["Title"] = "Registro";
    Layout = "_LayoutLogin";
}

<div class="form-page">
    <div class="form-card">
        <h1 class="form-title">Crear cuenta</h1>
        <p class="form-subtitle">Regístrate para empezar a comprar CDs y vinilos.</p>

        <form asp-action="Register" method="post" class="form-layout">
            <div asp-validation-summary="ModelOnly" class="form-error"></div>

            <div class="form-field">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-input" />
                <span asp-validation-for="Email" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-input" />
                <span asp-validation-for="Nombre" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Direccion"></label>
                <input asp-for="Direccion" class="form-input" />
                <span asp-validation-for="Direccion" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="FechaNacimiento"></label>
                <input asp-for="FechaNacimiento" class="form-input" />
                <span asp-validation-for="FechaNacimiento" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="CodPostal"></label>
                <input asp-for="CodPostal" class="form-input" />
                <span asp-validation-for="CodPostal" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-input" />
                <span asp-validation-for="Password" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-input" />
                <span asp-validation-for="ConfirmPassword" class="form-error"></span>
            </div>

            <button class="btn primary-btn" type="submit">Registrarme</button>

            <div style="margin-top:10px;">
                <a class="btn ghost-btn" asp-controller="Usuario" asp-action="Login">Ya tengo cuenta</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
