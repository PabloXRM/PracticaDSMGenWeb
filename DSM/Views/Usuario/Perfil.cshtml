@model DSM.Models.UsuarioViewModel
@{
    ViewData["Title"] = "Mi perfil";
}
<div class="profile-page">
    <div class="profile-card">

        <div class="profile-header">
            <div>
                <h1 class="profile-title">Mi perfil</h1>
                <p class="profile-subtitle">Consulta y edita tus datos personales.</p>
            </div>

            <div class="profile-badges">
                <span class="profile-badge primary">@Model.Rol</span>
                @if (Model.Rol == "Admin" && !string.IsNullOrEmpty(Model.IdAdmin))
                {
                    <span class="profile-badge">ID Admin: @Model.IdAdmin</span>
                }
            </div>
        </div>

        <div class="profile-divider"></div>

        <div class="profile-grid">
            <div class="profile-field">
                <div class="profile-label">Email</div>
                <div class="profile-value">@Model.email</div>
            </div>

            <div class="profile-field">
                <div class="profile-label">Nombre</div>
                <div class="profile-value">@Model.Nombre</div>
            </div>

            <div class="profile-field">
                <div class="profile-label">Dirección</div>
                <div class="profile-value">@Model.Direccion</div>
            </div>

            <div class="profile-field">
                <div class="profile-label">Código Postal</div>
                <div class="profile-value">@Model.CodPostal</div>
            </div>

            <div class="profile-field">
                <div class="profile-label">Fecha de nacimiento</div>
                <div class="profile-value">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="profile-field">
                <div class="profile-label">Rol</div>
                <div class="profile-value">@Model.Rol</div>
            </div>
        </div>

        <!-- Sección Estantería Virtual -->
        <div class="profile-divider"></div>

        <div class="profile-section-estanteria">
            <h2 style="margin: 0 0 12px 0; font-size: 1.2rem; font-weight: 700;">📚 Mi Estantería Virtual</h2>
            <p style="margin: 0 0 16px 0; color: var(--color-muted);">Organiza tus discos y vinilos favoritos en una estantería personal.</p>
            <a class="btn primary-btn" asp-controller="Usuario" asp-action="EstanteriaVirtual">Ver mi estantería</a>
        </div>

        <div class="profile-actions">
            <a class="btn primary-btn" asp-controller="Usuario" asp-action="EditPerfil">Editar perfil</a>
            <a class="btn ghost-btn" asp-controller="Home" asp-action="Index">Volver</a>
            <a class="btn danger-btn" asp-controller="Usuario" asp-action="CambiarPassword">Cambiar contraseña</a>
            <a class="logout-link" asp-controller="Usuario" asp-action="Logout">Cerrar sesión</a>
        </div>

    </div>
</div>

<style>
    .profile-section-estanteria {
        background: linear-gradient(135deg, rgba(245,212,192,0.3) 0%, rgba(255,255,255,0) 100%);
        border: 1px solid rgba(217,137,91,0.2);
        border-radius: 16px;
        padding: 18px;
        margin: 20px 0;
    }

    .profile-section-estanteria .btn {
        margin-top: 12px;
    }
</style>
