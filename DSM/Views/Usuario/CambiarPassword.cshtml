@model DSM.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambiar contraseña";
}

<div class="form-page">
    <div class="form-card">
        <h1 class="form-title">Cambiar contraseña</h1>
        <p class="form-subtitle">Introduce tu contraseña actual y la nueva.</p>

        <form asp-action="CambiarPassword" method="post" class="form-layout">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="form-error"></div>

            <div class="form-field">
                <label asp-for="PasswordActual">Contraseña actual</label>
                <input asp-for="PasswordActual" class="form-input" />
                <span asp-validation-for="PasswordActual" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="PasswordNueva">Nueva contraseña</label>
                <input asp-for="PasswordNueva" class="form-input" />
                <span asp-validation-for="PasswordNueva" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="ConfirmarPasswordNueva">Confirmar nueva contraseña</label>
                <input asp-for="ConfirmarPasswordNueva" class="form-input" />
                <span asp-validation-for="ConfirmarPasswordNueva" class="form-error"></span>
            </div>

            <button class="btn primary-btn" type="submit">Guardar</button>
            <a class="btn ghost-btn" asp-controller="Usuario" asp-action="Perfil">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
