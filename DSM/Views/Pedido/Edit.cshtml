@model DSM.Models.PedidoViewModel

@{
    ViewData["Title"] = "Editar Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-page">
    <div class="form-card">
        <h1 class="form-title">Editar pedido</h1>
        <p class="form-subtitle">Actualiza los datos del pedido.</p>

        <form asp-action="Edit" method="post" class="form-layout">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="form-error"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-field">
                <label asp-for="Numero"></label>
                <input asp-for="Numero" class="form-input" />
                <span asp-validation-for="Numero" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Fecha"></label>
                <input asp-for="Fecha" class="form-input" type="date" />
                <span asp-validation-for="Fecha" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="TotalPrecio"></label>
                <input asp-for="TotalPrecio" class="form-input" step="0.01" inputmode="decimal" />
                <span asp-validation-for="TotalPrecio" class="form-error"></span>
            </div>


            <div class="form-field">
                <label asp-for="EstadoPedido"></label>
                <select asp-for="EstadoPedido" class="form-select" asp-items="ViewBag.EstadoList">
                    <option value="">-- Selecciona --</option>
                </select>
                <span asp-validation-for="EstadoPedido" class="form-error"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn primary-btn">Guardar</button>
                <a asp-action="Index" class="btn ghost-btn">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
