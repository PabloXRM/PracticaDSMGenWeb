@using DSM.Models
@{
    var u = Context.Session.Get<UsuarioViewModel>("usuario");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TempoShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/global.css" />
</head>

<body>
    <header class="site-header">
        <div class="topbar topbar-news">
            <div class="topbar-inner topbar-inner--thin">
                <div class="news-nav">
                    <span class="news-pill">NOVEDADES</span>
                    <span class="news-text">Lo último en vinilos · Envío 24h</span>
                </div>
            </div>
        </div>

        <div class="topbar topbar-main">
            <div class="topbar-inner">
                <a class="logo-link" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="DSM" class="logo" />
                </a>

                <nav class="navbar navbar-expand-sm navbar-light bg-white">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="main-menu navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>

                            @* ---------- MENÚ ADMIN ---------- *@
                            @if (u?.Rol == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Producto" asp-action="Index">Productos (Admin)</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Factura" asp-action="Index">Facturas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Estanteria" asp-action="Index">Estanterías</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="MetodoPago" asp-action="Index">Métodos de pago</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Pedido" asp-action="Index"><b>Pedidos</b></a>
                                </li>
                            }
                            else
                            {
                                @* ---------- MENÚ USUARIO ---------- *@
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Tienda" asp-action="Catalogo">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Carrito" asp-action="Index">Carrito</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                            </li>

                            @if (u != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Usuario" asp-action="Perfil">Perfil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Usuario" asp-action="Logout">Salir</a>
                                </li>
                            }
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <div class="page-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="footer-links">
            <a href="#">Aviso legal</a>
            <a href="#">Privacidad</a>
            <a href="#">Contacto</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
