@using DSM.Models
@{
    var u = Context.Session.Get<UsuarioViewModel>("usuario");
    var esAdmin = (u?.Rol == "Admin");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TempoShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<body>
    <header class="site-header">
        <div class="topbar topbar-news">
            <div class="topbar-inner topbar-inner--thin">
                <div class="news-nav">
                    <span class="news-pill">NOVEDADES</span>
                    <span class="news-text">Lo último en vinilos · Envío 24h</span>
                </div>
            </div>
        </div>

        <div class="topbar topbar-main">
            <div class="topbar-inner">
                <a class="logo-link" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="TempoShop" class="logo" />
                </a>

                <nav class="navbar navbar-expand-sm navbar-light bg-white @(esAdmin ? "navbar-admin" : "")">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="main-menu navbar-nav flex-grow-1">
                            @if (u != null)
                            {
                                if (esAdmin)
                                {
                                    <li class="nav-item"><span class="nav-link" style="font-weight:700;color:var(--color-primary);">BACKOFFICE</span></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Producto" asp-action="Index">Productos</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Pedido" asp-action="Index"><b>Pedidos</b></a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Resena" asp-action="Index">Reseñas</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Factura" asp-action="Index">Facturas</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Estanteria" asp-action="Index">Estanterías</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="MetodoPago" asp-action="Index">Métodos de pago</a></li>
                                }
                                else
                                {
                                    <li class="nav-item"><a class="nav-link" asp-controller="Tienda" asp-action="Catalogo">Catálogo</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Carrito" asp-action="Index">Carrito</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Pedido" asp-action="Index">Mis pedidos</a></li>
                                }

                                <li class="nav-item"><a class="nav-link" asp-controller="Usuario" asp-action="Perfil">Perfil</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Usuario" asp-action="Logout">Salir</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Tienda" asp-action="Catalogo">Catálogo</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacidad</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Usuario" asp-action="Login">Entrar</a></li>
                            }

                            <li class="nav-item nav-social">
                                <a class="social-link" href="#" aria-label="Facebook" title="Facebook">
                                    <img src="~/img/faceb.png" alt="Facebook" />
                                </a>
                                <a class="social-link" href="#" aria-label="Twitter" title="Twitter">
                                    <img src="~/img/tw.png" alt="Twitter" />
                                </a>
                                <a class="social-link" href="#" aria-label="Instagram" title="Instagram">
                                    <img src="~/img/insta.png" alt="Instagram" />
                                </a>
                            </li>
                        </ul>

                    </div>
                </nav>
            </div>
        </div>
    </header>

    <div class="page-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="footer-links">
            <a href="#">Aviso legal</a>
            <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
            <a href="#">Contacto</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
