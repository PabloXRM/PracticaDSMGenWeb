@model DSM.Models.ProductoViewModel

@{
    ViewData["Title"] = "Editar producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-page">
    <div class="form-card">
        <h1 class="form-title">Editar producto</h1>
        <p class="form-subtitle">Modifica la descripción, precio y stock.</p>

        <form asp-action="Edit" method="post" class="form-layout">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="form-error"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Formato" />
            <input type="hidden" asp-for="Estilo" />
            <input type="hidden" asp-for="Fotos" />
            <input type="hidden" asp-for="Artista" />

            <div class="form-field">
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion" class="form-input" />
                <span asp-validation-for="Descripcion" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Precio"></label>
                <input asp-for="Precio" class="form-input" />
                <span asp-validation-for="Precio" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-input" />
                <span asp-validation-for="Stock" class="form-error"></span>
            </div>

            <div class="form-actions">
                <button class="btn primary-btn" type="submit">Guardar</button>
                <a class="btn ghost-btn" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
