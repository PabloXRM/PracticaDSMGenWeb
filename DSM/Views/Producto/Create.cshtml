@model DSM.Models.ProductoViewModel

@{
    ViewData["Title"] = "Crear producto";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="section form-page">
    <div class="form-card">
        <div class="form-header">
            <span class="section-kicker">Catálogo</span>
            <h2>Nuevo producto</h2>
            <p>Da de alta un nuevo vinilo, CD o artículo en la tienda.</p>
        </div>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="form-validation-summary"></div>

            <div class="form-layout">
                <div class="form-field">
                    <label asp-for="Descripcion"></label>
                    <input asp-for="Descripcion" class="form-input" />
                    <span asp-validation-for="Descripcion" class="form-error"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Precio"></label>
                    <input asp-for="Precio" class="form-input" />
                    <span asp-validation-for="Precio" class="form-error"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Stock"></label>
                    <input asp-for="Stock" class="form-input" />
                    <span asp-validation-for="Stock" class="form-error"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Fichero"></label>
                    <input asp-for="Fichero" type="file" class="form-input" required />
                    <span asp-validation-for="Fichero" class="form-error"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</section>
