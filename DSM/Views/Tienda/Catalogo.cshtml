@model IEnumerable<DSM.Models.ProductoViewModel>

@{
    ViewData["Title"] = "Catálogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-header section-header-row">
        <div>
            <div class="section-kicker">Tienda</div>
            <h2>CATÁLOGO</h2>
        </div>
    </div>

    <div class="shop-grid">
        @foreach (var p in Model)
        {
            <article class="shop-card">
                <a class="shop-card-link" asp-controller="Tienda" asp-action="Producto" asp-route-id="@p.Id">
                    <div class="shop-img">

                        @{
                            var foto = string.IsNullOrWhiteSpace(p.Fotos)
                            ? Url.Content("~/img/cd1.png")
                            : Url.Content("~/" + p.Fotos.TrimStart('/'));
                        }

                        <img src="@foto" alt="@p.Descripcion" />

                    </div>

                    <div class="shop-info">
                        <h3 class="shop-title">@p.Descripcion</h3>

                        <div class="shop-meta">
                            <span class="shop-price">@String.Format("{0:0.00} €", p.Precio)</span>
                            <span class="shop-stockpill">STOCK: @p.Stock</span>
                        </div>

                        <div class="shop-actions">
                            <span class="btn ghost-btn btn-sm">Ver detalles</span>
                        </div>
                    </div>
                </a>
            </article>
        }
    </div>
</section>
