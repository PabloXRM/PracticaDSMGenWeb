@model DSM.Models.ReseñaViewModel

@{
    ViewData["Title"] = "Escribir Reseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section form-page">
    <div class="form-card">
        <div class="form-header">
            <span class="section-kicker">Opiniones</span>
            <h2>Escribir Reseña</h2>
            <p>Comparte tu opinión sobre este producto.</p>
        </div>

        <form asp-action="Create" method="post" class="form-layout">
            <div asp-validation-summary="ModelOnly" class="form-validation-summary"></div>

            <div class="form-field">
                <label asp-for="IdProducto" class="control-label">Producto</label>
                <select asp-for="IdProducto" asp-items="ViewBag.Productos" class="form-select" required>
                    <option value="">-- Selecciona un producto --</option>
                </select>
                <span asp-validation-for="IdProducto" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Descripcion" class="control-label">Tu Opinión</label>
                <textarea asp-for="Descripcion" class="form-textarea" placeholder="Cuéntanos qué te pareció del producto..." required></textarea>
                <span asp-validation-for="Descripcion" class="form-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Nota" class="control-label">Calificación (0-10)</label>
                <input asp-for="Nota" type="number" min="0" max="10" class="form-input" required />
                <span asp-validation-for="Nota" class="form-error"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn primary-btn">Publicar Reseña</button>
                <a asp-controller="Tienda" asp-action="Catalogo" class="btn ghost-btn">Cancelar</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
