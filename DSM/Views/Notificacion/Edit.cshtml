@model DSM.Models.NotificacionViewModel

@{
    ViewData["Title"] = "Editar notificación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar notificación</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Tipo" class="control-label"></label>
        <select asp-for="Tipo" class="form-control">
            <option value="pedido">pedido</option>
            <option value="novedad">novedad</option>
            <option value="aviso">aviso</option>
            <option value="recomendacion">recomendacion</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Fotos"></label>
        <input asp-for="Fotos" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>