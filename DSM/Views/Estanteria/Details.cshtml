@model DSM.Models.EstanteriaViewModel

@{
    ViewData["Title"] = "Detalles de la Estantería";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-header section-header-row">
        <div>
            <div class="section-kicker">Estantería</div>
            <h2>DETALLES</h2>
        </div>
        <a class="btn ghost-btn" asp-action="Index">Volver a la lista</a>
    </div>

    <div class="detail-card">
        <div class="detail-list">
            <div class="detail-row">
                <div class="detail-label">Descripción</div>
                <div class="detail-value">@Model.Descripcion</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Valoración</div>
                <div class="detail-value">@Model.Valoracion</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Visitas</div>
                <div class="detail-value">@Model.Visitas</div>
            </div>

        <div class="form-actions" style="margin-top:16px;">
            <a class="btn primary-btn" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        </div>
    </div>
</section>
